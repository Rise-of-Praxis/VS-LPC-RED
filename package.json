{
	"name": "lpc-remote-editor",
	"displayName": "Remote Editor for LP MUDs",
	"description": "Enables creators on an LP MUD to remotely edit code through VS Code",
	"preview": true,
	"files": [
		"content"
	],
	"publisher": "rise-of-praxis",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"url": "https://github.com/AdamM-AU/VS-LPC-RED.git"
	},
	"activationEvents": [
		"onFileSystem:lpc-remote-ed",
		"onCommand:lpc-remote-editor.createNewWorkspace"
	],
	"scripts": {
		"build": "vsce package"
	},
	"main": "./src/extension.js",
	"capabilities": {
		"virtualWorkspaces": true
	},
	"extensionDependencies": [
		"undeadfish.vscode-lpc-lang"
	],
	"contributes": {
		"commands": [
			{
				"title": "Create new LPC Remote Editor workspace",
				"category": "Remote Editor for LP MUDs",
				"command": "lpc-remote-editor.createNewWorkspace"
			}
		],
		"configuration": {
			"title": "LPC Remote Editor for LP MUDs",
			"properties": {
				"lpcRemoteEditor.useOutputChannel": {
					"title": "Use Debug Output Channel",
					"type": "boolean",
					"default": false,
					"description": "Creates a channel in the Output Window containing debugging information."
				}
			}
		}
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"vsce": "^1.100.1"
	},
	"dependencies": {
		"handlebars": "^4.7.7"
	}
}
